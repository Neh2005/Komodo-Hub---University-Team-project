rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // üîπ USERS COLLECTION: Users can read/update their own data, but only admins can see all users
    match /users/{userCategory}/members/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId; // ‚úÖ Users see and update their own data
      allow read: if request.auth.token.admin == true; // ‚úÖ Admins can read all user data
      allow write: if request.auth != null && request.auth.uid == userId; // ‚úÖ Users can update only their own profile
      
    }

    // üîπ ALLOW STUDENTS & TEACHERS TO FETCH THEIR SCHOOL'S SUBSCRIPTION DETAILS
    match /users/school/members/{schoolCode} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/users/student/members/$(request.auth.uid)) ||
                                exists(/databases/$(database)/documents/users/teacher/members/$(request.auth.uid));
    }

    // üîπ REGISTERED INSTITUTES: Allow access to authenticated users
    match /registeredInstitutes/{instituteId} {
      allow read, write: if request.auth != null;
    }

    // üîπ PUBLIC DATA: Anyone can read, but only authenticated users can write
    match /publicData/{docId} {
      allow read;
      allow write: if request.auth != null;
    }

    // üîπ ADMINS COLLECTION: Only admins can read & write
    match /admins/{adminId} {
      allow read, write: if request.auth.token.admin == true;
    }

    // ‚ùå DEFAULT RULE: Deny access to all other documents unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /users/{category}/{userId}/profilePic.jpg {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
